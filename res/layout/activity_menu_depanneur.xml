<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.condorcet.projetgroup2.MenuDepanneur" >

    <Button
        android:id="@+id/AfficherTache1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/AffTache" />

    <Button
        android:id="@+id/Deconnexion2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/AfficherTache1"
        android:layout_alignRight="@+id/AfficherTache1"
        android:layout_below="@+id/AfficherTache1"
        android:layout_marginTop="15dp"
        android:text="@string/Deco" />

</RelativeLayout>
